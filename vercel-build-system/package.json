{
  "name": "vercel-build-system",
  "version": "1.0.0",
  "description": "Intelligent build system with autonomous error resolution",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.js",
    "dev:client": "webpack serve --config config/webpack/dev.js",
    "build": "npm run build:clean && npm run build:webpack && npm run build:functions",
    "build:clean": "rimraf dist logs/*.log",
    "build:webpack": "webpack --config config/webpack/prod.js",
    "build:functions": "npm run build:functions:api && npm run build:functions:edge",
    "build:functions:api": "tsc -p config/typescript/functions.json",
    "build:functions:edge": "esbuild api/edge/*.js --bundle --outdir=dist/edge --platform=node --format=esm",
    "start": "node dist/server.js",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "lint": "eslint src api --ext .js,.jsx,.ts,.tsx --config config/eslint/.eslintrc.js",
    "lint:fix": "eslint src api --ext .js,.jsx,.ts,.tsx --config config/eslint/.eslintrc.js --fix",
    "format": "prettier --config config/prettier/.prettierrc --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\" \"api/**/*.{js,ts}\"",
    "format:check": "prettier --config config/prettier/.prettierrc --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\" \"api/**/*.{js,ts}\"",
    "type-check": "tsc --noEmit --project config/typescript/tsconfig.json",
    "analyze": "npm run build && npm run analyze:bundle",
    "analyze:bundle": "webpack-bundle-analyzer dist/static/js/*.js",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:staging": "vercel --target staging",
    "logs": "vercel logs",
    "monitor": "pm2 monit",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "health-check": "node scripts/health-check.js",
    "security-audit": "npm audit && npm run security-scan",
    "security-scan": "node scripts/security-scan.js",
    "performance-test": "lighthouse http://localhost:3000 --config-path=config/lighthouse.config.js",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "setup": "npm install && npm run setup:env && npm run setup:config",
    "setup:env": "node scripts/setup-env.js",
    "setup:config": "node scripts/setup-config.js",
    "cleanup": "npm run build:clean && rimraf node_modules/.cache temp/*",
    "diagnose": "node scripts/diagnose.js",
    "fix": "node scripts/auto-fix.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "pm2": "^5.3.0",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/winston": "^2.4.4",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-merge": "^5.10.0",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "lighthouse": "^11.4.0",
    "esbuild": "^0.19.5",
    "terser-webpack-plugin": "^5.3.9",
    "mini-css-extract-plugin": "^2.7.6",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^8.0.1"
  },
  "keywords": [
    "vercel",
    "build-system",
    "serverless",
    "deployment",
    "ci-cd",
    "autonomous",
    "error-resolution"
  ],
  "author": "Autonomous Build System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/vercel-build-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/vercel-build-system/issues"
  },
  "homepage": "https://github.com/your-org/vercel-build-system#readme"
}
