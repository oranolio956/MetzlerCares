# Metzler Foundations Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Supabase Configuration (Required)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Analytics (Optional but recommended for production)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking (Optional)
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io

# Sanity CMS (Optional)
VITE_SANITY_PROJECT_ID=your_sanity_project_id
VITE_SANITY_DATASET=production

# Stripe Payments (Optional)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# AI/Machine Learning (Optional)
OPENAI_API_KEY=sk-your_openai_api_key

# Automation (Optional)
KERAGON_WEBHOOK_URL=https://your_keragon_webhook_url

# Security (Required for production)
JWT_SECRET=your_32_character_plus_jwt_secret_key
VITE_ENCRYPTION_KEY=your_32_character_encryption_key

# Environment
NODE_ENV=development

# Site URL (for production)
PUBLIC_SITE_URL=https://yourdomain.com

# Google Indexing API (Optional - for rapid content indexing)
# Option 1: Base64 encoded service account JSON (recommended for Vercel)
# Encode your service account JSON: cat service-account.json | base64
GOOGLE_SERVICE_ACCOUNT_KEY=your_base64_encoded_service_account_json

# Option 2: Path to service account JSON file (for local development)
GOOGLE_SERVICE_ACCOUNT_PATH=./service-account.json

# Alternative: Standard Google environment variable
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Google Search Console API (Optional)
GOOGLE_SEARCH_CONSOLE_API_KEY=your_search_console_api_key