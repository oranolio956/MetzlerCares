# Metzler Foundations Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Supabase Configuration (Required)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Analytics (Optional but recommended for production)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking (Optional)
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io

# Sanity CMS (Optional)
VITE_SANITY_PROJECT_ID=your_sanity_project_id
VITE_SANITY_DATASET=production

# Stripe Payments (Optional)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# AI/Machine Learning (Optional)
OPENAI_API_KEY=sk-your_openai_api_key

# Automation (Optional)
KERAGON_WEBHOOK_URL=https://your_keragon_webhook_url

# Security (Required for production)
JWT_SECRET=your_32_character_plus_jwt_secret_key
VITE_ENCRYPTION_KEY=your_32_character_encryption_key

# Environment
NODE_ENV=development

# Site URL (for production)
PUBLIC_SITE_URL=https://yourdomain.com